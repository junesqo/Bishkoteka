<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultCard"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_organization_photo"
            android:scaleType="centerCrop"
            android:src="@drawable/event1"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:strokeColor="@color/fragment_bg"
            app:strokeWidth="2dp"
            android:layout_width="72dp"
            android:layout_height="72dp"/>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_organization_name"
                android:maxLines="1"
                style="@style/Text16Semibold"
                android:text="Организация"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_organization_type"
                android:maxLines="1"
                style="@style/Text14Regular"
                android:text="Сфера деятельности"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>