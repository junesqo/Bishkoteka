<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bishkoteka" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>



    <style name="DefaultButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_semibold</item>
<!--        <item name="color">#FFFF0054</item>-->
<!--        <item name="colorPrimary">#FFFF0054</item>-->
<!--        <item name="colorAccent">#FFFF0054</item>-->
<!--        <item name="colorOnPrimary">#FFFF0054</item>-->
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="DefaultEditText">
        <item name="backgroundTint">@color/white</item>
        <item name="borderWidth">2dp</item>
<!--        <item name="background">@drawable/default_edit_text</item>-->
    </style>

    <style name="H1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_heavy</item>
    </style>

    <style name="H2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
    </style>

    <style name="H3">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
    </style>

    <style name="H4">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
    </style>

    <style name="H5">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:fontFamily">@font/sf_ui_display_medium</item>
    </style>

    <style name="H6">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:fontFamily">@font/sf_ui_display_medium</item>
    </style>

</resources>