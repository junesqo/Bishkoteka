<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bishkoteka" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ItemChip">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStartPadding">4dp</item>
        <item name="chipEndPadding">4dp</item>
        <item name="background">@color/fragment_bg</item>
    </style>

    <style name="DefaultBigButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_semibold</item>
        <item name="android:letterSpacing">0.03</item>
        <!--        <item name="color">#FFFF0054</item>-->
        <!--        <item name="colorPrimary">#FFFF0054</item>-->
        <!--        <item name="colorAccent">#FFFF0054</item>-->
        <!--        <item name="colorOnPrimary">#FFFF0054</item>-->
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_semibold</item>
        <item name="android:letterSpacing">0.03</item>
<!--        <item name="color">#FFFF0054</item>-->
<!--        <item name="colorPrimary">#FFFF0054</item>-->
<!--        <item name="colorAccent">#FFFF0054</item>-->
<!--        <item name="colorOnPrimary">#FFFF0054</item>-->
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ItemButton">
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center|start</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_ui_display_regular</item>
        <item name="maxLines">1</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ItemButtonCategory" parent="ItemButton">
        <item name="fontFamily">@font/sf_ui_display_medium</item>
    </style>

    <style name="ItemButtonSemibold" parent="ItemButton">
        <item name="fontFamily">@font/sf_ui_display_semibold</item>
    </style>

    <style name="ItemButtonTitle" parent="ItemButton">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/sf_ui_display_bold</item>
    </style>

    <style name="LittleInfo">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sf_ui_display_regular</item>
        <item name="drawableTint">@color/main</item>
        <item name="maxLines">1</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DefaultCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="background">@color/white</item>
    </style>

    <style name="MySpinnerDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="DefaultTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="fontFamily">@font/sf_ui_display_semibold</item>
    </style>

    <style name="DefaultEditText">
        <item name="maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/sf_ui_display_semibold</item>
        <item name="android:textSize">14sp</item>
<!--        <item name="background">@drawable/default_edit_text</item>-->
    </style>

    <style name="H1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/montserrat_black</item>
    </style>

<!--    Все заголовки-->
