<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bishkoteka" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">#FFFF0054</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_ui_display_semibold</item>
<!--        <item name="color">#FFFF0054</item>-->
<!--        <item name="colorPrimary">#FFFF0054</item>-->
<!--        <item name="colorAccent">#FFFF0054</item>-->
<!--        <item name="colorOnPrimary">#FFFF0054</item>-->
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="DefaultEditText">
        <item name="backgroundTint">@color/white</item>
        <item name="borderWidth">2dp</item>
<!--        <item name="background">@drawable/default_edit_text</item>-->
    </style>

    <style name="H1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_heavy</item>
    </style>

    <style name="H2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
    </style>

    <style name="H3">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
    </style>

    <style name="H4">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
    </style>

</resources>