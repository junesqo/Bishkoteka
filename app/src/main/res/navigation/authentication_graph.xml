<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authentication_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="kg.bishkoteka.ui.fragments.authentication.signUp.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="kg.bishkoteka.ui.fragments.authentication.signIn.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_chooseAccountTypeFragment"
            app:destination="@id/chooseAccountTypeFragment" />
    </fragment>
    <fragment
        android:id="@+id/chooseAccountTypeFragment"
        android:name="kg.bishkoteka.ui.fragments.authentication.chooseTypeOfAccount.ChooseAccountTypeFragment"
        android:label="ChooseAccountTypeFragment"
        tools:layout="@layout/fragment_choose_account_type" >
        <action
            android:id="@+id/action_chooseAccountTypeFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
</navigation>